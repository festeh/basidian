{
  "$schema": "https://schemas.tauri.app/config/2/capabilities",
  "identifier": "default",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "fs:default",
    "fs:allow-write-text-file",
    "fs:allow-create",
    "fs:allow-exists",
    "fs:allow-mkdir",
    {
      "identifier": "fs:scope",
      "allow": [{ "path": "$TEMP/**" }]
    },
    "safe-area-insets:default"
  ]
}
